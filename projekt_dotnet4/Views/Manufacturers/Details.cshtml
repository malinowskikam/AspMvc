@model projekt_dotnet.Models.Manufacturer

@{
    ViewBag.Title = "Szczegóły";
}

<h2>Szczegóły: @Model.Name</h2>

<div>
    <h4>Producent</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rating)
        </dd>

        <dt>
            Ilość narzędzi
        </dt>

        <dd>
            @ViewBag.ToolCount
        </dd>

        @if (@ViewBag.ToolCount > 0)
        { <text>
        <dt>
            Średnia ocen narzędzi
        </dt>

        <dd>
            @ViewBag.ToolRating
        </dd>
        </text>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Wróć", "Index")
</p>
